/*
Definition of singly linked list:
struct ListNode
{
    int val;
    ListNode *next;
    ListNode()
    {
        val = 0;
        next = NULL;
    }
    ListNode(int data1)
    {
        val = data1;
        next = NULL;
    }
    ListNode(int data1, ListNode *next1)
    {
        val = data1;
        next = next1;
    }
};
*/

class Solution {
public:
 int lengthLoop(ListNode *slow,ListNode *fast){
    fast = fast->next;
    int count=1;
    while(slow!=fast){
        count++;
        fast = fast->next;
    }
    return count;
 }
    int findLengthOfLoop(ListNode *head) {
        ListNode* slow = head;
        ListNode* fast = head;
        int count=1;
        while(fast!=NULL && fast->next!=NULL){
            slow = slow->next;
            fast = fast->next->next;
            if(fast == slow){
              return lengthLoop(slow,fast);
            }
        }
        return 0;
    }
};
