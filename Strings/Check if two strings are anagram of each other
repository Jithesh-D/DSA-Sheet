class Solution {
public:
    bool isAnagram(string s, string t) {
     //Brute FOrce : O(NLogN), SC : O(1)
    //   sort(s.begin(),s.end());
    //   sort(t.begin(),t.end());
    //   return s==t;  
   
    
    // Optimal solution : O(N), 
    if(s.length() != t.length()) return false;
    int freq[26]={0};
    for(char c : s) freq[c - 'a']++;
    for(char c : t) freq[c - 'a']--;

    for(int i=0;i<26;i++){
        if(freq[i]!=0){
            return false;
        }
    }
    return true;
 }
};
